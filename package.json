{
  "name": "@intellectcollective/ui",
  "version": "0.0.1",
  "description": "A unified and living component library made available for use across the collective holdings.",
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/intellectcollective/ui"
  },
  "scripts": {
    "start": "start-storybook -p 3000 -c .storybook",
    "lint": "eslint .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "NODE_ENV=production webpack --config ./.storybook/webpack.config.js --output-path ./dist"
  },
  "dependencies": {
    "classnames": "2.2.5",
    "date-fns": "2.0.0-alpha.16",
    "immutability-helper": "2.7.1"
  },
  "devDependencies": {
    "@storybook/addon-options": "3.1.x",
    "@storybook/react": "3.1.x",
    "babel-cli": "6.24.x",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.4.2",
    "babel-preset-es2015": "6.24.x",
    "babel-preset-es2016": "6.24.x",
    "babel-preset-es2017": "6.24.x",
    "babel-preset-react": "6.24.x",
    "babel-preset-stage-2": "6.24.x",
    "coveralls": "3.0.2",
    "css-loader": "0.28.x",
    "enzyme": "3.3.x",
    "enzyme-adapter-react-16": "1.1.x",
    "enzyme-to-json": "3.3.x",
    "eslint": "5.3.0",
    "eslint-config-airbnb": "17.0.0",
    "eslint-plugin-import": "2.13.0",
    "eslint-plugin-jsdoc": "3.7.1",
    "eslint-plugin-jsx-a11y": "6.1.1",
    "eslint-plugin-react": "7.10.0",
    "eslint-plugin-unicorn": "5.0.0",
    "extract-text-webpack-plugin": "3.0.0",
    "identity-obj-proxy": "3.0.x",
    "jest": "23.4.2",
    "jest-spec-reporter": "1.0.4",
    "node-sass": "4.5.3",
    "prop-types": "15.6.2",
    "react": "16.4.2",
    "react-dom": "16.4.2",
    "react-test-renderer": "16.4.2",
    "sass-loader": "6.0.6",
    "style-loader": "^0.23.0"
  },
  "peerDependencies": {
    "prop-types": "15.6.2",
    "react": "16.4.2",
    "react-dom": "16.4.2"
  },
  "jest": {
    "testURL": "http://localhost/",
    "testMatch": [
      "**/*.tests.js"
    ],
    "setupFiles": [
      "./.jest.conf.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "^.+\\.(css|scss|sass|less)$": "identity-obj-proxy"
    },
    "collectCoverage": true,
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      ".*/stories.js",
      "/.*\\.tests.js/"
    ]
  }
}
