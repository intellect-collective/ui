{
  "name": "@intellectcollective/ui",
  "version": "0.0.1",
  "description": "A unified and living component library made available for use across the collective holdings.",
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/intellectcollective/ui"
  },
  "scripts": {
    "start": "start-storybook -p 3000 -c .storybook",
    "lint": "eslint .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "NODE_ENV=production webpack --config ./.storybook/webpack.config.js --output-path ./dist",
    "build:storybook": "build-storybook -c .storybook -o .out",
    "deploy:storybook": "storybook-to-ghpages"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/plugin-proposal-export-default-from": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@dump247/storybook-state": "^1.6.1",
    "@storybook/addon-a11y": "^5.1.9",
    "@storybook/addon-actions": "^5.1.9",
    "@storybook/addon-options": "5.1.9",
    "@storybook/react": "5.1.9",
    "@storybook/storybook-deployer": "^2.8.1",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "classnames": "^2.2.6",
    "clsx": "^1.0.4",
    "coveralls": "^3.0.4",
    "css-loader": "^3.0.0",
    "date-fns": "^2.0.0-alpha.32",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "3.3.x",
    "eslint": "^6.0.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsdoc": "^8.7.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-unicorn": "^9.1.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "identity-obj-proxy": "3.0.x",
    "immutability-helper": "^3.0.1",
    "jest": "^24.8.0",
    "jest-extended": "^0.11.0",
    "jest-spec-reporter": "^1.0.6",
    "node-sass": "^4.12.0",
    "prop-types": "15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-test-renderer": "^16.8.6",
    "sass-loader": "^7.1.0",
    "storybook-cartesian": "^2.1.1",
    "style-loader": "^0.23.1"
  },
  "peerDependencies": {
    "prop-types": "15.7.2",
    "react": "16.8.6",
    "react-dom": "16.8.6"
  },
  "jest": {
    "testURL": "http://localhost/",
    "testMatch": [
      "**/*.tests.js"
    ],
    "setupFiles": [
      "./.jest.conf.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "^.+\\.(css|scss|sass|less)$": "identity-obj-proxy"
    },
    "collectCoverage": true,
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      ".*/stories.js",
      "/.*\\.tests.js/"
    ],
    "setupTestFrameworkScriptFile": "jest-extended"
  }
}
